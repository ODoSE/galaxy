<tool id="divergence_calculations" name="Calculate direction of selection">
	<description>per taxon</description>
	<requirements>
		<requirement type="python-module">divergence</requirement>
	</requirements>
	<command interpreter="python">wrapper.py divergence.calculations logfile
--genomes-a $genomesa
--genomes-b $genomesb
--sico-zip $sicozip 
--table-a $tablea 
--table-b $tableb</command>
	<inputs>
		<param format="tabular" name="genomesa" type="data" label="Taxon A IDs" />
		<param format="tabular" name="genomesb" type="data" label="Taxon B IDs" />
		<param format="zip" name="sicozip" type="data" label="Aligned / Trimmed orthologs" />
	</inputs>
	<outputs>
		<data format="tabular" name="tablea" label="Statistics table for Taxon A" />
		<data format="tabular" name="tableb" label="Statistics table for Taxon B" />
	</outputs>
	<help>
This tool calculates the direction of selection between two taxa. 
</help>
</tool>

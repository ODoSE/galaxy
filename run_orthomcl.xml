<tool id="divergence_run_orthomcl" name="Run OrthoMCL">
	<description>to find orthologs using reciprocal BLAST and HMM clustering</description>
	<requirements>
		<requirement type="python-module">divergence</requirement>
	</requirements>
	<command interpreter="python">wrapper.py divergence.run_orthomcl $logfile
--protein-zip $proteinzip
--groups $groups
</command>
	<inputs>
		<param format="zip" name="proteinzip" type="data" label="Translated gene proteins" />
	</inputs>
	<outputs>
		<data format="txt" name="logfile" label="Logfile for ${tool.name}" />
		<data format="tabular" name="groups" label="Orthologous groups" />
	</outputs>
	<help>
This tool runs OrthoMCL and returns the orthologous groups file.
  </help>
</tool>

<tool id="divergence_run_paml" name="Run PAML">
  <description>Run PAML to calculate Dn/Ds</description>
  <requirements>
    <requirement type="python-module">divergence</requirement>
  </requirements>
  <command interpreter="python">wrapper.py divergence.run_paml
--genomes-a $genomesa
--genomes-b $genomesb
--sico-zip $sicozip
--paml-zip $pamlzip
</command>
  <inputs>
    <param format="txt" name="genomesa" type="data" label="Clade A RefSeq project IDs file"/>
    <param format="txt" name="genomesb" type="data" label="Clade B RefSeq project IDs file"/>
    <param format="zip" name="sicozip" type="data" label="Trimmed SICO genes"/>
  </inputs>
  <outputs>
    <data format="zip" name="pamlzip" label="PAML output for SICOs"/>
  </outputs>
  <help>
Run PAML for each SICO gene, for genes taken from representatives of each clade.
  </help>
</tool>

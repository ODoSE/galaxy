<tool id="divergence_calculate_pnps" name="Calculate pN/pS">
	<description>for a FASTA alignment file</description>
	<requirements>
		<requirement type="python-module">divergence</requirement>
	</requirements>
	<command interpreter="python">wrapper.py divergence.calculate_pnps $logfile 
--alignment $alignment</command>
	<inputs>
		<param type="text" name="userinput" label="FASTA alignment" area="True" size="40x100">
			<sanitizer  sanitize="False"/>
		</param>
	</inputs>
	<outputs>
		<data format="txt" name="logfile" label="Logfile for ${tool.name}" />
	</outputs>
	<help>Enter a FASTA alignment in the field above &amp; press Execute.</help>
	<configfiles>
		<configfile name="alignment">
${userinput}
		</configfile>
	</configfiles>
</tool>

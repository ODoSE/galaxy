<tool id="divergence_split_by_taxon" name="Split alignments by taxa">
	<description></description>
	<requirements>
		<requirement type="python-module">divergence</requirement>
	</requirements>
	<command interpreter="python">wrapper.py divergence.split_by_taxon logfile
--genomes-a $genomesa
--genomes-b $genomesb
--sico-zip $sicozip
--taxon-a-zip $taxonazip
--taxon-b-zip $taxonbzip
</command>
	<inputs>
		<param format="txt" name="genomesa" type="data" label="Taxon A RefSeq project IDs file" />
		<param format="txt" name="genomesb" type="data" label="Taxon B RefSeq project IDs file" />
		<param format="zip" name="sicozip" type="data" label="Aligned / Trimmed orthologs" />
	</inputs>
	<outputs>
		<data format="zip" name="taxonazip" label="Taxon A orthologs" />
		<data format="zip" name="taxonbzip" label="Taxon B orthologs" />
	</outputs>
	<help>
Separate multiple sequence alignments with sequences from two taxa out into separate alignment files per taxon.
  </help>
</tool>
